@model Slider

@{
    ViewData["Title"] = "Slider Detail";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <h4>Category</h4>
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="header d-flex justify-content-between my-5">
                        <h1 class="card-title my-3">Slider</h1>
                        <div><a class="btn btn-success btn-sm my-4"asp-action="Create">Create</a></div>




                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>  Slider Image </th>
                                    <th>  Slider Description </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td> <img style="width:200px; height:150px" src="~/assets/image/@Model.Image" alt="Slider" /> </td>
                                </tr>
                                <tr>
                                    <th><p>@Model.Desc</p>  </th>
                                </tr>
                                <tr>
                                    <a class="btn btn-primary btn-sm" asp-action="Index">Go Back</a>
                                </tr>
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

