@model Category

@{
    ViewData["Title"] = "Category Detail";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <h4>Category</h4>
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="header d-flex justify-content-between my-5">
                        <h1 class="card-title my-3">Category</h1>
                        <div><a class="btn btn-success btn-sm my-4" href="#">Create</a></div>




                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th> Category name </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td> @Model.Name </td>
                                </tr>
                                <tr>
                                    <a class="btn btn-primary btn-sm" asp-action="Index">Go Back</a>
                                </tr>
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
