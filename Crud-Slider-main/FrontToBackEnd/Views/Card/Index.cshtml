@model List<BasketDetailVM>
@{
    ViewData["Title"] = "Card";
    int count = 0;
    decimal totalPrice = 0;
}

@section style{
    <link rel="stylesheet" href="~/assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/assets/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/assets/css/flipclock.css">
    <link rel="stylesheet" href="~/assets/css/card.css">
}
<main>
    <section id="basket">
        <div class="container">
            <h3 class="mt-3">Products</h3>
            <div class="row mt-5">
                <div class="card">
                    <div class="row">
                        <div class="col-md-8 cart">
                            <div class="title">
                                <div class="row">
                                    <div class="col">
                                        <h4><b>Shopping Cart</b></h4>
                                    </div>
                                    <div class="col align-self-center text-right text-muted">3 items</div>
                                </div>
                            </div>
                            @foreach (var item in Model)
                            {
                                <div class="row border-top border-bottom">
                                    <div class="row main align-items-center">
                                        <div class="col-2"><img class="img-fluid" src="~/assets/image/@item.Image"></div>
                                        <div class="col">
                                            <div class="row">@item.Title</div>
                                        </div>
                                        <div class="col"> <a href="#">-</a><a href="#" class="border">@item.Count</a><a href="#">+</a> </div>
                                        <div class="col">&euro; @item.NewPrice <span class="close">&#10005;</span></div>
                                    </div>
                                </div>
                                count++;
                                totalPrice += item.NewPrice;

                            }
                           


                            <div class="back-to-shop"><a href="#">&leftarrow;</a><span class="text-muted">Back to shop</span></div>
                        </div>
                        <div class="col-md-4 summary">
                            <div>
                                <h5><b>Summary</b></h5>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col" style="padding-left:0;">ITEMS 3</div>
                                <div class="col text-right">&euro; @totalPrice</div>
                            </div>
                            <form>
                                <p>SHIPPING</p> <select>
                                    <option class="text-muted">Standard-Delivery- &euro;5.00</option>
                                </select>
                                <p>GIVE CODE</p> <input id="code" placeholder="Enter your code">
                            </form>
                            <div class="row" style="border-top: 1px solid rgba(0,0,0,.1); padding: 2vh 0;">
                                <div class="col">TOTAL PRICE</div>
                                <div class="col text-right">&euro; @totalPrice</div>
                            </div> <button class="btn">CHECKOUT</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
